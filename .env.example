# StreamHub 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# TMDB API 配置
TMDB_API_KEY=your_tmdb_api_key_here

# Emby 服务器配置 (可选 - 如果不想在前端配置)
EMBY_SERVER_URL=https://your-emby-server.com
EMBY_API_KEY=your_emby_api_key_here

# MoviePilot 配置 (可选 - 如果不想在前端配置)
MOVIEPILOT_URL=https://your-moviepilot-server.com
MOVIEPILOT_USERNAME=your_username
MOVIEPILOT_PASSWORD=your_password

# 服务器配置
PORT=3000
NODE_ENV=production

# 数据存储路径
DATA_DIR=./data

# CORS 配置 (生产环境建议设置具体域名)
ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.com
